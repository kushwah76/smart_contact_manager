<%= render 'navbar'%>

<h1>All Contacts</h1>

<%= link_to "New contact", new_contact_path %>


<!DOCTYPE html>
<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>


<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile.no</th>
      <th>Address</th>
      <th>image</th>
      <th>Action</th>
      


  </tr>
     <%@contact.each do |contact|%>
  <tr>

    
    <td><%=contact.name%></td>
    <td><%=contact.email%></td>
    <td><%=contact.mobile_number%></td>
    <td><%=contact.address%></td>
    <td><% if contact.profile_image.persisted?%>
    <%=image_tag contact.profile_image,style:"width:100px;display:block"%>
    <%end%></td>
    <td><%= link_to "Edit", edit_contact_path(contact) %>   <%= link_to "Delete", contact_path(contact), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>

  </tr>
  <%end%>

  </tr>
</table>

</body>
</html>


